{
  "name": "payment-link-extension",
  "version": "1.9.9",
  "description": "Chrome extension for generating payment links",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "node build.js",
    "build:content": "vite build",
    "build:background": "tsc src/background.ts --outDir dist --target es2020 --module es2020 --moduleResolution node --skipLibCheck",
    "copy:manifest": "cp public/manifest.json dist/",
    "clean": "rm -rf dist",
    "preview": "vite preview"
  },
  "dependencies": {
    "@cardknox/react-ifields": "^2.2.76",
    "@fortawesome/fontawesome-svg-core": "^7.1.0",
    "@fortawesome/free-solid-svg-icons": "^7.1.0",
    "@fortawesome/react-fontawesome": "github:fortawesome/react-fontawesome",
    "amazon-cognito-identity-js": "^6.3.16",
    "card-validator": "^10.0.3",
    "font-awesome": "^4.7.0",
    "fontawesome": "^5.6.3",
    "lucide-react": "^0.556.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.9.6",
    "react-select": "^5.10.2",
    "webextension-polyfill": "^0.10.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@types/chrome": "^0.0.254",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "typescript": "^5.9.3",
    "vite": "^5.0.0"
  }
}
