{
  "compilerOptions": {

    "target": "es2017",
    "lib": ["es2017", "dom", "dom.iterable"],
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true, "typeRoots": ["./node_modules/@types", "./src/types"],
     "types": ["chrome"],
  },
  
   "include": ["src/**/*"]
  
}