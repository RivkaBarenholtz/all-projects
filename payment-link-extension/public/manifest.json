{
  "manifest_version": 3,
  "name": "InsTech360 for Applied Epic by Insure Tech",
  "version": "1.09.7",
  "host_permissions": [
    "https://*.appliedepic.com/*",
    "https://*.instechpay.co/*",
    "http://localhost:3000/*",
    "http://127.0.0.1:3000/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
 
  "permissions": [
    "webRequest",
    "scripting",
    "activeTab",
    "windows",
    "storage"
  ],
"content_scripts": [
    {
      "matches": ["https://*.appliedepic.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "images/InsTech16.png",
    "48": "images/InsTech48.png",
    "128": "images/InsTech128.png"
  },
  "action": {
    "default_title": "Insure Tech Applied Epic Extension",
    "default_icon": {
      "16": "images/InsTech16.png",
      "32": "images/InsTech32.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "styles/*.css",
        "fonts/*.woff2",
        "webfonts/*.woff2",
        "webfonts/*.ttf"
      ],
      "matches": ["https://*.appliedepic.com/*"]
    }
  ]
}